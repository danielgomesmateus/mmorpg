<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>MMORPG - Game of Thrones</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

	</head>

	<body class="body-index">

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<form class="form-inline form-entrar">
					<div class="form-group">				
						<button type="button" class="btn btn-success">Voltar</button>
					</div>
				</form>
			</div>
			
		</nav>

	    <div class="container">

	    	<% if(validacao.length >= 1) { %>
	    	<% for(j = 0; j < validacao.length; j ++) { %>
			<div class="alert alert-danger">
				<strong>
					Erro!
				</strong> <%= validacao[j].msg %>
			</div>
			<% } } %>
	    		
			<form class="form-cadastro" action="/register" method="POST">
			
				<div class="row">
					<div class="col-xs-4">
						<div class="form-group">
							<label for="nome" class="col-sm-2 col-form-label">Nome</label>
							<input name="name" type="nome" class="form-control" id="nome" placeholder="Nome" required="required" value="<%= user.name %>">
						</div>
					</div>
					
					<div class="col-xs-4">
						<div class="form-group">
							<label for="usuario" class="col-sm-2 col-form-label">Usuário</label>
							<input name="user" type="usuario" class="form-control" id="usuario" placeholder="Usuário" required="required" value="<%= user.user %>">
						</div>
					</div>
					
					<div class="col-xs-4">
						<div class="form-group">
							<label for="senha" class="col-sm-2 col-form-label">Senha</label>
							<input name="password" type="password" class="form-control" id="senha" placeholder="Password" required="required" minlength="6" maxlength="10" value="<%= user.password %>">
						</div>
					</div>
				</div>
				
				<div class="form-group row">
				
        			<div class="col-xs-2">
        				<img src="img/casa_arryn.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="arryn"> Casa Arryn
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<img src="img/casa_baratheon.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="baratheon"> Casa Baratheon
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<img src="img/casa_greyjoy.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="greyjoy"> Casa Greyjoy
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<img src="img/casa_lannister.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="lannister"> Casa Lannister
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<img src="img/casa_martell.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="martell"> Casa Martell
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<img src="img/casa_stark.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="stark"> Casa Stark
						</center>
        			</div>
        		</div>
				
				<div class="form-group row">
				
					<div class="col-xs-3"></div>
				
        			<div class="col-xs-2">
        				<img src="img/casa_targaryen.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="targaryen"> Casa Targaryen
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<img src="img/casa_tully.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="tully"> Casa Tully
						</center>
        			</div>
					
					<div class="col-xs-2">
        				<img src="img/casa_tyrell.jpg" class="img-responsive img-radio">
						<center>
							<input type="radio" id="left-item" name="casa" value="tyrell"> Casa Tyrell
						</center>
        			</div>
					
					<div class="col-xs-3"></div>
				</div>		
				
			
				<div class="form-group row">
					<button type="submit" class="btn btn-primary">Confirmar cadastro</button>
				</div>
				

			</form>
					
	    </div>	
		
	</body>
</html>