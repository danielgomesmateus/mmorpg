<div id="pergaminhos">
	<h3>Pergaminhos</h3>
	<ul>
		<% var text = null; %>
		<% for(i = 0; i < actions.length; i ++) { %>
		<%

			switch(actions[i].action) {

				case '1':
					text = 'Coletar recursos (2G e 1H)';
					break;

				case '2':
					text = 'Enforcar aldeão (3G e 2H)';
					break;

				case '3':
					text = 'Ensinar história (1G e 5H)';
					break;

				case '4':
					text = 'Ensinar magia (1G e 5H)';
					break;
			}

			var date = new Date();
			var time_now = date.getTime();
			var ends_in = Math.round((actions[i].ends_in - time_now) / 1000);
		%>
		<li>
			<%= text %> - <%= actions[i].quantity %> (quantidade)
			<small>
				restam <span class="time_left"><%= ends_in %></span> segundos -
				<a href="/revoke/<%= actions[i]._id %>">
					revogar ordem
				</a>
			</small>
		</li>
		<% } %>
	</ul>
</div>
